filesets:
  files_rtl:
    depend:
      - pulp-platform.org::common_cells
    files:
    - rtl/i2s_reg_pkg.sv
    - rtl/i2s_reg_top.sv
    - rtl/i2s.sv
    - rtl/i2s_core.sv
    - rtl/i2s_rx_channel.sv
    - rtl/i2s_ws_gen.sv
    - rtl/event_counter.sv
    file_type: systemVerilogSource

  files_verilator_waiver:
    files:
      - i2s.vlt
    file_type: vlt

targets:
  default:
    filesets:
    - files_rtl
    - tool_verilator ? (files_verilator_waiver)
